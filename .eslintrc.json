{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-console": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": 0,
        "comma-dangle": 0
      }
    ],
    "@typescript-eslint/no-unused-vars": "off"
  },

  "ignorePatterns": ["dist"],
  "env": {
    "browser": true,
    "node": true
  }
}
